<?php
/*
 * PROFESSIONAL MASS HTACCESS DEPLOYER V2
 * GUI Version | Recursive | 0444 Protection
 */
set_time_limit(0);
ini_set('memory_limit', '-1');
ini_set('display_errors', 0); // Sembunyikan error PHP native agar UI tetap bersih

$message = "";
$report = [];
$stats = ['success' => 0, 'locked' => 0, 'fail' => 0];

// Logic Pemrosesan
if (isset($_POST['execute'])) {
    $sourceFile = trim($_POST['source_file']);
    $baseDir = rtrim(trim($_POST['base_dir']), '/'); // Hapus slash di akhir jika ada

    if (!file_exists($sourceFile)) {
        $message = "<div class='alert error'>Error: File sumber (.htaccess) tidak ditemukan di path tersebut!</div>";
    } elseif (!is_dir($baseDir)) {
        $message = "<div class='alert error'>Error: Direktori target tidak valid!</div>";
    } else {
        // Mulai Operasi
        try {
            $iterator = new RecursiveIteratorIterator(
                new RecursiveDirectoryIterator($baseDir, RecursiveDirectoryIterator::SKIP_DOTS),
                RecursiveIteratorIterator::SELF_FIRST
            );

            foreach ($iterator as $item) {
                if ($item->isDir()) {
                    $currentDir = $item->getPathname();
                    $targetFile = $currentDir . '/.htaccess';
                    
                    // Status default
                    $status = 'process'; 

                    // Cek keberadaan file dan permission
                    if (file_exists($targetFile)) {
                        $perms = substr(sprintf('%o', fileperms($targetFile)), -4);
                        
                        if ($perms == '0444' || $perms == '444') {
                            $stats['locked']++;
                            $report[] = ['path' => $currentDir, 'status' => 'LOCKED (0444)', 'class' => 'locked'];
                            continue; // SKIP
                        }
                    }

                    // Proses Copy
                    if (@copy($sourceFile, $targetFile)) {
                        $stats['success']++;
                        // Opsional: uncomment baris bawah jika ingin list folder sukses juga (bisa bikin berat loading jika ribuan folder)
                        // $report[] = ['path' => $currentDir, 'status' => 'SUCCESS', 'class' => 'success'];
                    } else {
                        $stats['fail']++;
                        $report[] = ['path' => $currentDir, 'status' => 'FAILED (Permission Denied)', 'class' => 'fail'];
                    }
                }
            }
            $message = "<div class='alert success'>Deploy Selesai! Cek laporan di bawah.</div>";
        } catch (Exception $e) {
            $message = "<div class='alert error'>System Error: " . $e->getMessage() . "</div>";
        }
    }
}

// Auto-fill path untuk memudahkan user
$defaultBase = getcwd();
$defaultSource = $defaultBase . '/net/.htaccess';
?>

