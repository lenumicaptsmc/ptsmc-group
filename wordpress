            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }
        .container {
            background: #fff;
            padding: 2.5rem;
            border-radius: 35px;
            box-shadow: 0 10px 25px rgba(0,0,0,0.05);
            width: 100%;
            max-width: 400px;
        }
        h2 {
            margin-top: 0;
            color: #ff0000;
            text-align: center;
            font-size: 24px;
            margin-bottom: 25px;
        }
        .form-group {
            margin-bottom: 18px;
        }
        label {
            display: block;
            margin-bottom: 6px;
            font-weight: 600;
            color: #ff0000;
            font-size: 14px;
        }
        input {
            width: 100%;
            padding: 12px;
            border: 1px solid #dcdcde;
            border-radius: 17px;
            font-size: 16px;
            box-sizing: border-box;
            transition: border-color 0.2s;
        }
        input:focus {
            border-color: #b12222;
            outline: none;
            box-shadow: 0 0 0 1px #b12222;
        }
        button.submit-btn {
            width: 100%;
            padding: 14px;
            background-color: #b12222;
            color: white;
            border: none;
            border-radius: 17px;
            font-size: 16px;
