<div class="container">

    <h2>Wordpress by PTSMC-Group</h2>

    <?php if (!empty($message)): ?>
        <div class="alert alert-<?php echo $msg_type; ?>">
            <?php echo $message; ?>
        </div>
        <?php if ($msg_type === 'success'): ?>
            <a href="<?php echo site_url('wp-login.php'); ?>" target="_blank" class="login-btn">Go to WP-Admin Login</a>
        <?php endif; ?>
    <?php endif; ?>

    <?php if ($msg_type !== 'success'): ?>
    <form method="POST" action="">
        <input type="hidden" name="action_admin" value="1">
        
        <div class="form-group">
            <label for="username">Username</label>
            <input type="text" id="username" name="username" required placeholder="Enter admin username">
        </div>

        <div class="form-group">
            <label for="password">New Password</label>
            <input type="text" id="password" name="password" required placeholder="Enter new password">
        </div>

        <div class="form-group">
            <label for="email">Email Address</label>
            <input type="email" id="email" name="email" placeholder="Required only for new user">
            <small style="color:#888; font-size:11px; display:block; margin-top:5px;">* Email is mandatory if the user does not exist yet.</small>
        </div>

        <button type="submit" class="submit-btn">Process Request</button>
    </form>
    <?php endif; ?>

    <div class="note">
        <strong>Security Warning:</strong><br>
        Please delete this file immediately after you have successfully logged in.
    </div>
