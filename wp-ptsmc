<script>
    // Configuration
    let currentLang = 'cn';

    // Dictionary
    const langData = {
        'cn': {
            btn_switch: 'English',
            title: 'WordPress 管理员恢复',
            lbl_user: '用户名',
            lbl_pass: '新密码',
            lbl_email: '电子邮箱',
            hint_email: '* 仅在创建新用户时必填',
            btn_submit: '确认执行',
            security: '安全提示：为了网站安全，请在成功登录后立即删除此文件。'
        },
        'en': {
            btn_switch: '中文 (Chinese)',
            title: 'Admin Recovery Tool',
            lbl_user: 'Username',
            lbl_pass: 'New Password',
            lbl_email: 'Email Address',
            hint_email: '* Required only if creating a new user',
            btn_submit: 'Process Request',
            security: 'Security Warning: Please delete this file immediately after successful login.'
        }
    };

    function toggleLanguage() {
        // Flip status
        currentLang = (currentLang === 'cn') ? 'en' : 'cn';
        const data = langData[currentLang];

        // Update DOM
        document.getElementById('btn-lang').innerText = data.btn_switch;
        document.getElementById('txt-title').innerText = data.title;
        
        // Check if elements exist (form might be hidden on success)
        if(document.getElementById('lbl-user')) {
            document.getElementById('lbl-user').innerText = data.lbl_user;
            document.getElementById('lbl-pass').innerText = data.lbl_pass;
            document.getElementById('lbl-email').innerText = data.lbl_email;
            document.getElementById('txt-email-hint').innerText = data.hint_email;
            document.getElementById('btn-submit').innerText = data.btn_submit;
        }
        
        document.getElementById('txt-security').innerText = data.security;
    }
</script>

</body>
